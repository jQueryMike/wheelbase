{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components": ["app/_components"],
      "@components/*": ["app/_components/*"],
      "@utils": ["app/_utils"],
      "@utils/*": ["app/_utils/*"],
      "@types": ["app/_types"],
      "@types/*": ["app/_types/*"],
      "@hooks": ["app/_hooks"],
      "@hooks/*": ["app/_hooks/*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "elastic-apm-node.js",
    "next.config.js",
    "postcss.config.js",
    "tailwind.builder.js",
    "tailwind/**/*.js",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "plopfile.mjs"
  ],
  "exclude": ["node_modules", "_ARCHIVE", "**/*.exclude"]
}
